

<%= form_for(@ressourcen) do |f| %>
  <% if @ressourcen.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ressourcen.errors.count, "error") %> prohibited this ressourcen from being saved:</h2>

      <ul>
      <% @ressourcen.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Ressourcename , "Ressourcename (* Pflichfeld)"%>
    <%= f.text_field :ressourcename %>
  </div>
  <div>
    <%= f.label :Ressourceart , "Ressourceart (* Pflichfeld)"%>
    <%= f.select :ressourceart, [['Arbeit','Arbeit'],['Material','Material'] ], :id => "ressourceart" %>
  </div>
  <div><br>
    <%= f.label :Funktion, "Funktion (* Pflichfeld) " %>
    <%= f.collection_select :ressourcefunktion, Ressourcefunction.all, :id , :name , :include_blank => true   %>
  </div>
  <div class="field">
    <%= f.label :Ressourcebeschreibung %>
    <%= f.text_field :ressourcebeschreibung,:id=> "ressourcebeschreibung" %>
  </div> 
  <div class="field">
    <%= f.label :Ressourcekuerzel %>
    <%= f.text_field :ressourcekuerzel, id: 'ressourcekuerzel' %>
  </div>
  <div class="field">
    <%= f.label :Ressourcegenerisch %>
    <%= f.check_box :ressourcegenerisch %>
  </div>
  <div class="field">
    <%= f.label :Ressourcemax , "Ressourcemax (* Pflichfeld)"%>
    <%= f.text_field :ressourcemax %>
  </div>
  <div class="fields">
    <%= f.submit %>
  </div>
<% end %>


